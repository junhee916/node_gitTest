<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Hello Bulma!</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css"
    />
    <script
      src="https://code.jquery.com/jquery-3.5.1.js"
      integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
      crossorigin="anonymous"
    ></script>
    <script>
      $(document).ready(function(){
        $('#writed').empty();
        boardView()
      })

      function boardWrites() {
        let writes = $("#writes").val();
        console.log(localStorage.getItem("token"))

        $.ajax({
          type: "POST",
          url: `/board/writes`,
          headers: {
            authorization: `Bearer ${localStorage.getItem("token")}`,
          },
          data: {
            contents: writes,
          },
          success: function (response) {
            window.location.href="/board"
          }
        });
      }

      function boardView(){
        $.ajax({
          type: "GET",
          url: `/board/writes`,
          data: {
          },
          success: function (response) {

            let board = response["board"]["boardData"]
            console.log(board)

            for(let i=0; i<board.length; i++){
              console.log(board[i]["nickname"])
              console.log(board[i]["_id"])
              
              let htmlTemp = `
              <div class="card" onclick="location.href='detail?boardId=${board[i]["boardId"]}'">
              <div class="card-content">
            <div class="media">
              <div class="media-left">
                <figure class="image is-48x48">
                  <img src="https://t1.daumcdn.net/cfile/tistory/99313E4E5AC2DEFD03" alt="Placeholder image">
                </figure>
              </div>
              <div class="media-content">
                <p class="title is-4">${board[i]["nickname"]}</p>
              </div>
            </div>
        
            <div class="content">
              ${board[i]["contents"]}
              <br>
            </div>
          </div>
          </div>
              `

              $('#writed').append(htmlTemp)
            }

          }
        });
      }

    </script>
  </head>
  <body>
    <section class="hero is-warning">
      <div class="hero-body">
        <p class="title">Board</p>
        <p class="subtitle">일상을 기록하세요.</p>
      </div>
    </section>

    <section class="section">
      <div class="container">
        <div class="field">
          <label class="label">Contents</label>
          <div class="control">
            <textarea
              class="textarea"
              placeholder="Textarea"
              id="writes"
            ></textarea>
          </div>
        </div>

        <div class="field is-grouped">
          <div class="control">
            <button class="button is-link" onclick="boardWrites()">Send</button>
          </div>
        </div>

        <div id="writed">

        </div>

    </section>
  </body>
</html>
